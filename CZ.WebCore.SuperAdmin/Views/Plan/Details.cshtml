                    <div class="card-header">Basic Details</div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped responsive">
                            <tbody>
                                <tr>
                                    <td class="ps-2"><b>Id</b></td>
                                    <td>
                                        @Model.Id
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Name</b></td>
                                    <td>
                                        @Model.Name
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Description</b></td>
                                    <td>
                                        @Model.Description
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Plan Type</b></td>
                                    <td>
                                        @Model.Type
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Price</b></td>
                                    <td>
                                        @await _dbSettings.GetCurrencySymbol()@Model.Price
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Created At</b></td>
                                    <td>
                                        @Model.CreatedAt
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Updated At</b></td>
                                    <td>
                                        @Model.UpdatedAt
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-2"><b>Is Promotional</b></td>
                                    <td>
                                        @if (Model.IsPromotional)
                                        {
                                            <p>Yes</p>
                                        }
                                        else
                                        {
                                            <p>No</p>
                                        }
                                    </td>
                                </tr>
                        </table>
                    </div>
                </div>
            </div>
