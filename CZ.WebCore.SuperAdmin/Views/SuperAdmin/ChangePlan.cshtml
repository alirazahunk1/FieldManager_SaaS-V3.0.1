@using CZ.WebCore.SuperAdmin.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ChangePlanVM
@{
    ViewData["Title"] = "Change Plan";
}
<div class="row mb-3">
    <div class="col">
        <div class="float-start">
            <h4 class="mt-2">@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="col">
        
    </div>
</div>
<div class="card">
    <div class="card-header">
        Activate @Model.UserName (@Model.Name)
    </div>
    <div class="card-body">
        <form method="post" asp-action="ChangePlan">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="TenantId" />
            <input type="hidden" asp-for="UserName" />
            <div class="form-group col-3">
                <label asp-for="PlanId" class="control-label"></label>
                <select asp-for="PlanId" class="form-control" asp-items="@ViewBag.plans"></select>
                <span asp-validation-for="PlanId" class="text-danger"></span>
            </div>
            <div class="form-group col-3 mt-3">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" value="1" type="number" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Change Plan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>