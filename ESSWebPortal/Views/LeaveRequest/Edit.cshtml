@model ESSDataAccess.Models.LeaveRequestModel

@{
    ViewData["Title"] = "Edit";
    ViewData["Back"] = true;
}
<form asp-action="Edit">
<div class="card">
    <div class="card-body">        
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Document" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="UpdatedAt" />
            <input type="hidden" asp-for="ApprovedOn" />
            <input type="hidden" asp-for="ApprovedBy" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="TenantId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" disabled class="form-control" asp-items="ViewBag.RequestedBy"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="LeaveTypeId" class="control-label"></label>
                    <select asp-for="LeaveTypeId" disabled class="form-control" asp-items="ViewBag.LeaveTypeId"></select>
                    <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="FromDate" class="control-label"></label>
                    <input asp-for="FromDate" type="date" class="form-control" />
                    <span asp-validation-for="FromDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ToDate" class="control-label"></label>
                    <input asp-for="ToDate" type="date" class="form-control" />
                    <span asp-validation-for="ToDate" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
    </div>
    <div class="card-footer">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    </div>
</div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
