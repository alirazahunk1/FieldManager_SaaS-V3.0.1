@using ESSDataAccess.Models.Form
@model IEnumerable<FormFieldModel>
<div class="card">
    <div class="card-header">
        <h5> Fields</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped" id="datatable">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(x => x.Id)</td>
                        <td>@Html.DisplayNameFor(x => x.FieldType)</td>
                        <td>@Html.DisplayNameFor(x => x.Label)</td>
                        <td>@Html.DisplayNameFor(x => x.Placeholder)</td>
                        <td>@Html.DisplayNameFor(x => x.Values)</td>
                        <td>@Html.DisplayNameFor(x => x.IsRequired)</td>
                        <td>@Html.DisplayNameFor(x => x.CreatedAt)</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FieldType</td>
                            <td>@item.Label</td>
                            <td>@item.Placeholder</td>
                            <td>@item.Values</td>
                            <td>@(item.IsRequired ? "Yes" : "No")</td>
                            <td>@item.CreatedAt</td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No fields added!</p>
        }
    </div>
</div>
