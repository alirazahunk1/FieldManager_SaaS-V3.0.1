@{
    ViewData["Title"] = "Access Denied";
    ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    ViewData["AppWithoutHeader"] = true;
    ViewData["AppWithoutSidebar"] = true;
    ViewData["AppIsLoginPage"] = true;
}
<div class="row">
    <div class="col-md-12">
        <img class="center" src="~/img/bg/access_denied_trans.png" />
        <h3 class="text-center font-weight-bold">Access Denied!</h3>
        <div class="d-flex justify-content-between">
            <div class="col-md-4 text-center">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary"><i class="fa fa-home"></i> Go Home</a>
            </div>
            <div class="col-md-4 text-center">
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Logout</button>
                </form>
            </div>
        </div>
    </div>

</div>