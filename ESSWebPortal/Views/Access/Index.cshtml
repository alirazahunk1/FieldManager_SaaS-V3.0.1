@model IEnumerable<AppRole>

@{
    ViewData["Title"] = "Access Control";
    ViewData["Create"] = true;
}

<div class="card shadow">
    <div class="card-header">
        <div class="float-start">
            <h4>@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped table-bordered col-md-6 text-nowrap">
            <thead>
                <tr>
                    <th>Id</th>
                    <th> @Html.DisplayNameFor(m => m.Name) </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <div class="col">
                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="Edit" class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id"><i class="fa fa-edit"></i></a>

                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?');" asp-action="Delete" asp-route-id="@role.Id"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
